AOR_SECRET_BACKEND=vault
AOR_REDACTION_REGEXES=(?i)(api_key|token|secret|password)

AOR_CONTAINER_IMAGE=ghcr.io/org/aor:4.2
AOR_SBOM_FORMAT=spdx
AOR_PROVENANCE_LEVEL=slsa-3

AOR_EGRESS_POLICY=deny
