AOR_RUN_ID=run-YYYYMMDD-XXX
AOR_ENV=production
AOR_TIMEZONE=UTC
AOR_STATE_DIR=./state

AOR_HRG1_SLA_HOURS=12
AOR_HRG2_SLA_HOURS=12
AOR_PAGER_POLICY=ops-oncall

AOR_RUN_BUDGET_USD=250
AOR_AGENT_BUDGET_USD=50
AOR_COST_VARIANCE_PCT=25
AOR_TASK_TTL_SEC=900
AOR_MAX_AGENT_CONCURRENCY=4
AOR_MAX_ITERATIONS=6

AOR_MODEL_PRIMARY=gpt-4o-2024-05-13
AOR_MODEL_SECONDARY=gemini-1.5-pro-05-13
